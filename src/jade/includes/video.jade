section.video
  .row
    .col.col-12-of-12
      h2 Video 
        a(href="https://vimeo.com/user2975416")
          i.fa.fa-vimeo
  hr
  .wrapper
    .gallery
    #video.carousel.slide(data-ride="carousel")
      ol.carousel-indicators
        li(data-target="video", data-slide-to="0" class="active")
        li(data-target="video", data-slide-to="1")
        li(data-target="video", data-slide-to="2")
      .carousel-inner(role="listbox")
        .item.active
          a(href="https://vimeo.com/38209422")
            img(src="/img/dreamcove_b_thumb.png", alt="")
          .carousel-caption
            p DreamCove
        .item
          a(href="https://vimeo.com/68871416")
            img(src="/img/olea_b_thumb.png", alt="")
          .carousel-caption
            p Daydream on Olea
        .item
          a(href="https://vimeo.com/8847152")
            img(src="/img/Thrillz_b_thumb.png", alt="")
          .carousel-caption
            p Thrillz Drink
              
        a(class="left carousel-control" href="#video" role="button" data-slide="prev") 
          i.fa.fa-arrow-left
          span.sr-only Prev             
        a(class="right carousel-control" href="#video" role="button" data-slide="next") 
          i.fa.fa-arrow-right
          span.sr-only Next
